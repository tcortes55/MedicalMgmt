@model IEnumerable<MedicalMgmt.Models.PrescriptedExam>

@if (Model.ToList().Count > 0)
{
    <table class="table" id="prescribedExams">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exam.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendToPacient)
            </th>
            @if (@ViewBag.AppointmentStatusID == MedicalMgmt.General.Constants.SS_AP_ONGOING)
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResultDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SendToPacient)
                </td>
                @if (@ViewBag.AppointmentStatusID == MedicalMgmt.General.Constants.SS_AP_ONGOING)
                {
                    <td>
                        <button type="button" class="btn btn-default btn-sm" data-item-id="@item.PrescriptedExamID" data-item-description="@item.Exam.Name (@item.Details)" data-item-exam-details="@item.Details" data-item-exam-send="@item.SendToPacient" data-toggle="modal" data-target="#confirm-edit-exam">Editar</button> |
                        <button type="button" class="btn btn-danger btn-sm" data-item-id="@item.PrescriptedExamID" data-item-description="@item.Exam.Name (@item.Details)" data-toggle="modal" data-target="#confirm-delete-exam">Remover</button>
                    </td>
                }
            </tr>
        }

    </table>
}
else
{
    <p>Nenhum exame prescrito.</p>
}
