@model MedicalMgmt.Models.Appointment

@{
    Layout = null;
    ViewBag.Title = "Alterar status";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Voltar</span></button>
            <h4 class="modal-title">Tem certeza que deseja alterar o status de @Model.Status.StatusDescription para @ViewBag.NextStatusDescription?</h4>
            @if (Model.StatusID == MedicalMgmt.General.Constants.SS_AP_ONGOING)
            {
                <h5 class="modal-title">As alterações (anamnese, alergias, histórico familiar e uso de medicamentos) serão salvas.</h5>
            }
        </div>
        <div class="modal-body">
            <p>@Html.DisplayNameFor(model => model.Patient.FullName): @Html.DisplayFor(model => model.Patient.FullName)</p>
            <p>@Html.DisplayNameFor(model => model.Physician.AppUser.FullName): @Html.DisplayFor(model => model.Physician.AppUser.FullName)</p>
            <p>@Html.DisplayNameFor(model => model.Physician.Expertise): @Html.DisplayFor(model => model.Physician.Expertise)</p>
            <p>@Html.DisplayNameFor(model => model.PlannedStartDate): @Html.DisplayFor(model => model.PlannedStartDate)</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-load" data-loading-text="Carregando..." id="btnConfirmChangeStatus"><i class="glyphicon glyphicon-ok"></i> Confirmar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Voltar</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->